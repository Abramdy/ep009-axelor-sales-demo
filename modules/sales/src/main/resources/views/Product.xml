<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">

    <grid name="product-grid" title="商品" model="com.mingming.sales.db.Product">
        <field name="name" />
        <field name="unitPrice" />
    </grid>

    <form name="product-form" title="商品" model="com.mingming.sales.db.Product">
        <panel name="mainPanel" >
            <panel name="imagePanel" colSpan="2">
                <field name="image" widget="Image" colSpan="12" />
            </panel>
            <panel title="基本信息" colSpan="6" itemSpan="12">
                <field name="name"/>
                <field name="unitPrice"/>
            </panel>
            <panel title="备注" colSpan="12">
                <field name="notes" showTitle="false" itemSpan="12"/>
            </panel>
        </panel>
    </form>

</object-views>
